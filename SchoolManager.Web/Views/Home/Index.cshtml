@{
    ViewData["Title"] = "Przedszkole Bajka";
}

<div class="container-fluid">
    <!-- Nagłówek -->
    <div class="row">
        <div class="col-12 text-center py-4">
            <h1 class="display-4 text-primary mb-4">Przedszkole nr 5 "Bajka" w Świnoujściu</h1>
        </div>
    </div>

    <div class="row justify-content-center mb-5">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <img src="~/przedszkole-bajka.jpg"
                     class="card-img-top img-fluid"
                     alt="Przedszkole Bajka"
                     style="height: 400px; object-fit: cover;">
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="row g-4">
                <div class="col">
                    <a href="@Url.Action("Index", "Employee")" class="btn btn-primary btn-lg w-100 py-4 shadow">
                        <i class="fas fa-users fa-2x mb-2"></i>
                        <br>
                        <span class="fs-4">Pracownicy</span>
                    </a>
                </div>
                <div class="col">
                    <a href="@Url.Action("Index", "Schedule")" class="btn btn-info btn-lg w-100 py-4 shadow">
                        <i class="fas fa-calendar-alt fa-2x mb-2"></i>
                        <br>
                        <span class="fs-4">Grafiki</span>
                    </a>
                </div>
                <div class="col">
                    <a href="@Url.Action("AddPosition", "Position")" class="btn btn-success btn-lg w-100 py-4 shadow">
                        <i class="fas fa-briefcase fa-2x mb-2"></i>
                        <br>
                        <span class="fs-4">Stanowiska</span>
                    </a>
            </div>
        </div>
    </div>
</div>

<!-- Dodatkowe style CSS -->
<style>
    .btn-lg {
        transition: transform 0.2s ease-in-out;
    }

    .btn-lg:hover {
        transform: translateY(-2px);
    }

    .display-4 {
        font-weight: 600;
        color: #2c3e50;
    }
</style>
